<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2 class="text-center my-4">TATU TTJ dagi o'quvchilar ro'yhati</h2>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            Rasmi
                                        </th>
                                        <th>
                                            Ism Familiyasi
                                        </th>
                                        <th>
                                            Kursi
                                        </th>
                                        <th>
                                            Guruhi
                                        </th>
                                        <th>
                                            Xonasi
                                        </th>
                                        <th>
                                            Kelgan sanasi
                                        </th>
                                        <th>
                                            To'lov qilgan oylari
                                        </th>
                                        <th>
                                            O'zgartirish
                                        </th>
                                        <th>
                                            O'chirish
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each student}}
                                    <tr>
                                        <td class="py-1">
                                            <img src="{{image}}" alt="" />
                                        </td>
                                        <td>
                                            {{fullname}}
                                        </td>
                                        <td>
                                            {{cource}}
                                        </td>
                                        <td>
                                            {{group}}
                                        </td>
                                        <td>
                                            {{room}}
                                        </td>
                                        <td>
                                            {{date}}
                                        </td>
                                        <td>
                                            {{amountMonth}}
                                        </td>
                                        <td>

                                            <!-- Button trigger modal -->
                                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                                data-bs-target="#modal{{_id}}">
                                                O'zgartirish
                                            </button>

                                        </td>
                                        <td>
                                            <form action="/delete/student/{{_id}}" method="POST">
                                                <button class="btn btn-danger">O'chirish</button>
                                            </form>
                                        </td>
                                    </tr>

                                    <!-- Modal -->
                                    <div class="modal fade" id="modal{{_id}}" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5 text-center" id="exampleModalLabel">
                                                        Talaba malumotlarini o'zgartirish</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <form class="col-6 m-auto" class="forms-sample" action="/update/student/{{_id}}"
                                                    method="post" enctype="multipart/form-data">
                                                    <div class="modal-body">
                                                        <div class="form-group">
                                                            <label>Rasm yulash</label>
                                                            <input type="file" name="image" class="file-upload-default">
                                                            <div class="input-group col-xs-12">
                                                                <input type="text" class="form-control file-upload-info"
                                                                    disabled placeholder="Rasm yuklash" name="image">
                                                                <span class="input-group-append">
                                                                    <button class="file-upload-browse btn btn-primary"
                                                                        type="button">Rasm
                                                                        yuklash</button>
                                                                </span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Ism familiyasi*</label>
                                                            <input value="{{fullname}}" required type="text"
                                                                class="form-control" placeholder="Ism familiya kiriting"
                                                                name="fullname">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="exampleSelectGender">Kursni kiriting*</label>
                                                            <select required class="form-control"
                                                                id="exampleSelectGender" name="cource" value="1-kurs">
                                                                <option selected>1-kurs</option>
                                                                <option>2-kurs</option>
                                                                <option>3-kurs</option>
                                                                <option>4-kurs</option>
                                                            </select>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="">Guruhni kiriting*</label>
                                                            <input value="{{group}}" required type="number"
                                                                class="form-control" placeholder="Guruhni kiritning"
                                                                name="group">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="">Xonasini kiriting*</label>
                                                            <input value="{{room}}" required type="text"
                                                                class="form-control" id="" placeholder="number"
                                                                name="room">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="">Kelgan sanasi*</label>
                                                            <input value="{{date}}" required type="date"
                                                                class="form-control" id="" placeholder="Sana"
                                                                value="2023-03-12" name="date">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="">Qancha oyga to'lov qilgan*</label>
                                                            <input value="{{amountMonth}}" required type="number"
                                                                class="form-control" id=""
                                                                placeholder="Qancha oyga to'lov qilgannini kiriting"
                                                                name="amountMonth">
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Qaytish</button>
                                                        <button type="submit" class="btn btn-primary">Saqlash</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2 class="text-center my-4">Talaba Qo'shish</h2>


                        <form class="col-6 m-auto" class="forms-sample" action="/create/student" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Rasm yulash</label>
                                <input type="file" name="image" class="file-upload-default">
                                <div class="input-group col-xs-12">
                                    <input type="text" class="form-control file-upload-info" disabled
                                        placeholder="Rasm yuklash">
                                    <span class="input-group-append">
                                        <button class="file-upload-browse btn btn-primary" type="button">Rasm
                                            yuklash</button>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Ism familiyasi*</label>
                                <input required type="text" class="form-control" placeholder="Ism familiya kiriting"
                                    name="fullname">
                            </div>
                            <div class="form-group">
                                <label for="exampleSelectGender">Kursni kiriting*</label>
                                <select required class="form-control" id="exampleSelectGender" name="cource"
                                    value="1-kurs">
                                    <option selected>1-kurs</option>
                                    <option>2-kurs</option>
                                    <option>3-kurs</option>
                                    <option>4-kurs</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="">Guruhni kiriting*</label>
                                <input required type="number" class="form-control" placeholder="Guruhni kiritning"
                                    name="group">
                            </div>
                            <div class="form-group">
                                <label for="">Xonasini kiriting*</label>
                                <input required type="text" class="form-control" id="" placeholder="number" name="room">
                            </div>
                            <div class="form-group">
                                <label for="">Kelgan sanasi*</label>
                                <input required type="date" class="form-control" id="" placeholder="Sana"
                                    value="2023-03-12" name="date">
                            </div>
                            <div class="form-group">
                                <label for="">Qancha oyga to'lov qilgan*</label>
                                <input required type="number" class="form-control" id=""
                                    placeholder="Qancha oyga to'lov qilgannini kiriting" value="2023-03-12"
                                    name="amountMonth">
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>