<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2 class="text-center my-4">TATU TTJ dagi o'quvchilar ro'yhati</h2>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            Xona
                                        </th>
                                        <th>
                                            Qavat
                                        </th>
                                        <th>
                                            Status
                                        </th>
                                        <th>
                                            Talabalar
                                        </th>
                                        <th>
                                            O'zgartirish
                                        </th>
                                        <th>
                                            O'chirish
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each rooms}}
                                    <tr>
                                        <td class="py-1">
                                            {{title}}
                                        </td>
                                        <td>
                                            {{fullname}}
                                        </td>
                                        <td>
                                            {{cource.title}}
                                        </td>
                                        <td>
                                            {{facultet.title}}
                                        </td>
                                        <td>

                                            <!-- Button trigger modal -->
                                            <button type="button" class="btn btn-inverse-primary" data-bs-toggle="modal"
                                                data-bs-target="#modal{{_id}}">
                                                O'zgartirish
                                            </button>

                                        </td>
                                        <td>
                                            <form action="/delete/student/{{_id}}" method="POST">
                                                <button class="btn btn-inverse-danger">O'chirish</button>
                                            </form>
                                        </td>
                                    </tr>

                                    <!-- Modal -->
                                    <div class="modal fade" id="modal{{_id}}" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5 text-center" id="exampleModalLabel">
                                                        Talaba malumotlarini o'zgartirish</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <form class="col-6 m-auto" class="forms-sample"
                                                    action="/update/student/{{_id}}" method="post"
                                                    enctype="multipart/form-data">
                                                    <div class="modal-body">
                                                        <div class="form-group">
                                                            <label>Rasm yulash</label>
                                                            <input type="file" name="image" class="file-upload-default">
                                                            <div class="input-group col-xs-12">
                                                                <input type="text" class="form-control file-upload-info"
                                                                    disabled placeholder="Rasm yuklash">
                                                                <span class="input-group-append">
                                                                    <button class="file-upload-browse btn btn-primary"
                                                                        type="button">Rasm
                                                                        yuklash</button>
                                                                </span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Ism familiyasi*</label>
                                                            <input required type="text" class="form-control"
                                                                placeholder="Ism familiya kiriting" name="fullname" value="{{fullname}}">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="exampleSelectGender">Fakultetini
                                                                kiriting*</label>
                                                            <select required class="form-control"
                                                                id="exampleSelectGender" name="facultet">
                                                                {{#each ../ data.facultets}}
                                                                <option value="{{_id}}">{{title}}</option>
                                                                {{/each}}
                                                            </select>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="exampleSelectGender">Kursni kiriting*</label>
                                                            <select required class="form-control"
                                                                id="exampleSelectGender" name="cource">
                                                                {{#each ../ data.courses}}
                                                                <option value="{{_id}}">{{title}}-kurs</option>
                                                                {{/each}}
                                                            </select>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="">Guruhni kiriting*</label>
                                                            <select required class="form-control"
                                                                id="exampleSelectGender" name="group">
                                                                {{#each ../ data.groups}}
                                                                <option value="{{_id}}">{{title}}-guruh</option>
                                                                {{/each}}
                                                            </select>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="">Qavatni kiriting*</label>
                                                            <select required class="form-control"
                                                                id="exampleSelectGender" name="stage">
                                                                {{#each ../ data.stages}}
                                                                <option value="{{_id}}">{{title}}-qavat</option>
                                                                {{/each}}
                                                            </select>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="">Xonasini kiriting*</label>
                                                            <select required class="form-control"
                                                                id="exampleSelectGender" name="room">
                                                                {{#each ../ data.rooms}}
                                                                <option value="{{_id}}">{{title}}-xona</option>
                                                                {{/each}}
                                                            </select>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="">Kelgan sanasi*</label>
                                                            <input required type="date" class="form-control" id=""
                                                                placeholder="Sana" value="2023-03-12" name="date" value="{{date}}">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="">Qancha oyga to'lov qilgan*</label>
                                                            <input required type="number" class="form-control" id=""
                                                                placeholder="Qancha oyga to'lov qilgannini kiriting"
                                                                name="amountMonth" value="{{amountMonth}}">
                                                        </div>
                                                        <button type="submit"
                                                            class="btn btn-primary mr-2">Submit</button>
                                                        <button class="btn btn-light">Cancel</button>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Qaytish</button>
                                                            <button type="submit"
                                                                class="btn btn-primary">Saqlash</button>
                                                        </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>